<Window x:Class="AdminPanel.AddEditTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="AddEditTeacher" Height="350" Width="700">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Button Click="ClosingWindow" VerticalAlignment="Top" Padding="10" HorizontalAlignment="Right" Style="{StaticResource CloseButton}">
            <Image Source="/Image/cross.png" Width="20"/>
        </Button>
        <Label x:Name="MainLabal" HorizontalAlignment="Center" Margin="0,10" FontSize="20" Foreground="#65919c" FontWeight="Bold">Добавление преподавателя</Label>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
            <StackPanel>
                <Image x:Name="ImageBox" Source="/Image/not_picture.png" Width="150" Height="150" Stretch="Fill"/>
                <Button Click="AddImage" Style="{StaticResource ButtonStyle}" Margin="0,5">Загрузить</Button>
                <Button Click="DeleteImage" x:Name="ButtonDel" Style="{StaticResource ButtonStyle}">Удалить</Button>
            </StackPanel>
            <StackPanel Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Label HorizontalContentAlignment="Center" Width="80" Height="30" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="18">Фамилия:</Label>
                    <StackPanel Margin="10,0,0,0">
                        <TextBox x:Name="SurnameEdit" Style="{StaticResource CustomTextBoxStyle}" Height="30" VerticalContentAlignment="Center" FontSize="18" Width="350" Padding="0,2,0,0" TextChanged="TextedChanged"></TextBox>
                        <Label x:Name="SurnameError" Padding="0" Foreground="DarkRed" Visibility="Hidden">Пустое поле!</Label>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label HorizontalContentAlignment="Center" Width="80" Height="30" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="18">Имя:</Label>
                    <StackPanel Margin="10,0,0,0">
                        <TextBox x:Name="NameEdit" Style="{StaticResource CustomTextBoxStyle}" Height="30" VerticalContentAlignment="Center" FontSize="18" Width="350" Padding="0,2,0,0" TextChanged="TextedChanged"></TextBox>
                        <Label x:Name="NameError" Padding="0" Foreground="DarkRed" Visibility="Hidden">Пустое поле!</Label>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label HorizontalContentAlignment="Center" Width="80" Height="30" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="18">Отчество:</Label>
                    <StackPanel Margin="10,0,0,0">
                        <TextBox x:Name="PatronymicEdit" Style="{StaticResource CustomTextBoxStyle}" Height="30" VerticalContentAlignment="Center" FontSize="18" Width="350" Padding="0,2,0,0" TextChanged="TextedChanged"></TextBox>
                        <Label x:Name="PatronymicError" Padding="0" Foreground="DarkRed" Visibility="Hidden">Пустое поле!</Label>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label HorizontalContentAlignment="Center" Width="90" Height="30" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="18">Категория:</Label>
                    <ComboBox x:Name="ComboBox1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="145" Margin="5,0" SelectionChanged="ComboBoxChanged"></ComboBox>
                    <ComboBox x:Name="ComboBox2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="80" SelectionChanged="ComboBoxChanged"></ComboBox>
                    <Label Margin="5,0,0,0" FontSize="12" Padding="5,0" VerticalContentAlignment="Center">квалиф. категории</Label>
                </StackPanel>
            </StackPanel>
            <Canvas>
                <Button x:Name="TeacherDelete" Click="DeleteElement" Style="{StaticResource ButtonClotting}" Canvas.Left="10">
                    <Image Source="/Image/trash.png" Width="28"></Image>
                </Button>
            </Canvas>
        </StackPanel>
        <Button Click="SaveTeacher" x:Name="MainButton" Margin="0,0,0,15" Padding="50,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource RoundedButtonStyle}">Добавить</Button>
        <Canvas x:Name="MyCanvas" VerticalAlignment="Top" HorizontalAlignment="Left" Width="700" Height="351" Visibility="Collapsed">
            <Canvas.Background>
                <ImageBrush ImageSource="/Image/canvas2.png"/>
            </Canvas.Background>
            <Border Background="#65919c" Canvas.Top="90" Canvas.Left="175" Width="350" Height="170" CornerRadius="15">
                <StackPanel Margin="10,5">
                    <Label x:Name="CanvasMain" FontSize="25" Foreground="White" HorizontalAlignment="Center" >Добавление</Label>
                    <TextBlock FontSize="20" x:Name="CanvasDescription" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Foreground="White">Вы действительно хотите добавить преподователя?</TextBlock>
                    <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button Click="ButtonYes" Style="{StaticResource RoundedButtonStyleWhite}" Width="120" Height="35" FontSize="18" Margin="0,5,40,5">Да</Button>
                        <Button Click="ButtonNo" Style="{StaticResource RoundedButtonStyleWhite}" Width="120" FontSize="18" Height="35">Нет</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Canvas>
    </Grid>
</Window>
